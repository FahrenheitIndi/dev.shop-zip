.articles__title
  position relative
  font-size 2.25rem
  font-weight 500
  text-align left
  color rgb(34, 34, 34)
  &:after
    position absolute
    top 50%
    right 0
    width 40rem
    height 0.1875rem
    content ''
    background-color  rgb(153, 153, 153)

.article
  /*display flex
  justify-content space-between*/

.article-item
  width 16.1875rem
  border solid 1px #979797

.article-item__link
  margin-x(auto)
  padding-top 1.125rem
  font-size 1.125rem
  display block
  font-weight 700
  text-align center
  text-decoration none
  color rgb(34, 34, 34)
  &:hover
      text-decoration underline