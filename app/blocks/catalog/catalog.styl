.catalog__title
  position relative
  font-size 2.25rem
  font-weight 500
  text-align left
  color rgb(34, 34, 34)
  &:after
    position absolute
    top 50%
    right 0
    width 40rem
    height 0.1875rem
    content ''
    background-color  rgb(153, 153, 153)
  +between($tablet-portrait, $tablet-landspace)
    font-size 1.8rem
  +between($phone, $tablet-portrait)
    font-size 1.5rem
  +below($phone)
    font-size 1.2rem
  +below($desktop)
    text-align center
    &:after
      display none