.olives
  position relative
  height 13.5rem
  padding-x(6.25rem)
  padding-y(4rem)
  &:before
    position absolute
    top 3.75rem
    left 0
    width 60px
    height 96px
    content ''
    background-image url('../img/olives.svg')
  &:after
    position absolute
    top 3.75rem
    right 0
    width 60px
    height 96px
    content ''
    background-image url('../img/olives.svg')
    transform scale(-1, 1)
  +between($tablet-portrait, $tablet-landspace)
    height auto
    font-size 1.2rem
  +between($phone, $tablet-portrait)
    height auto
    font-size 1rem
    padding-y(1rem)
    padding-x(2.5rem)
    &:after, &:before
      display none
  +below($phone)
    height auto
    font-size 1rem
    padding-y(1rem)
    padding-x(2.5rem)
    &:after, &:before
      display none

.olives__text
  position relative
  font-size 1.5rem
  line-height 1.3
  text-align center
  color rgb(1, 1, 1)
  opacity 0.8
  +between($tablet-portrait, $tablet-landspace)
    font-size inherit
  +between($phone, $tablet-portrait)
    font-size inherit
  +below($phone)
    font-size inherit

