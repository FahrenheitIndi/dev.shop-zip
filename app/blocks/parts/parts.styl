.parts__title
  position relative
  font-size 2.25rem
  font-weight 700
  text-align left
  color rgb(34, 34, 34)
  &:after
    position absolute
    top 50%
    right 0
    width 40rem
    height 0.1875rem
    content ''
    background-color  rgb(153, 153, 153)
  +between($tablet-portrait, $tablet-landspace)
    font-size 1.8rem
  +between($phone, $tablet-portrait)
    font-size 1.5rem
  +below($phone)
    font-size 1.2rem
  +below($desktop)
    text-align center
    &:after
      display none


.part
  padding-y(2rem)
  display flex
  align-content flex-start
  justify-content space-around
  flex-wrap wrap

.part-item
  position relative
  height 18rem
  width 16.25rem
  margin-bottom 2rem
  flex-basis 16.25rem
  box-shadow 0 1px 3px 0px rgba(0, 0, 0, 0.1)
  background $white
  transition all 0.2s
  &:hover
    margin-top -6px
    margin-bottom 6px
    box-shadow 0 15px 10px -8px rgba(0, 0, 0, 0.2), 0 1px 4px rgba(0, 0, 0, 0.1)

.part-item__link
  width 100%
  margin-bottom 0.75rem
  padding-top 1.1rem
  padding-x(4.125rem)
  display block

.part-item__text
  width 14rem
  margin-x(auto)
  font-size 1.125rem
  font-weight 700
  display block
  text-align center
  &:hover
    text-decoration underline

.part-item__button
  position absolute
  left 0
  right 0
  bottom 1.75rem
  height 2.5rem
  width 9.25rem
  margin-x(auto)
  line-height 2.5rem
  font-weight 700
  background-color rgb(255,109,75)
  text-align center
  text-decoration none
  text-transform capitalize
  color $white
  &:hover
    text-decoration none
