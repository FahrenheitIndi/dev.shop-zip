.service-order
  position relative
  z-index 2
  padding-x(6.5rem)
  padding-y(4rem)
  background-image radial-gradient(circle at 69% 63%, #6cc0ec, #6eb3e7)
  text-align left
  +between($phone, $tablet-portrait)
    padding-x(4rem)
  +below($phone)
    padding-x(2rem)

.border
  position absolute
  z-index 3
  top 1rem
  right 1rem
  bottom 1rem
  left 1rem
  border 2px dashed rgb(255, 255, 255)

.service-order__text
  position relative
  z-index 4
  font-size 1.4rem
  font-weight 300
  text-transform uppercase
  color rgb(54, 57, 60)

.service-form
  position relative
  z-index 4
  width 100%
  margin-top 1.5rem

.field-group
  text-align center
  overflow hidden

.field
  position relative
  width calc(100%/3 - 4rem)
  display inline-block
  color rgb(54, 57, 60)
  +below($tablet-landspace)
    width auto
    margin-bottom 1rem
    display block


.field_name
  float left
  +below($tablet-landspace)
    float none

.field_button
  float right
  cursor pointer
  +below($tablet-landspace)
    float none

.field__input
  width 100%
  padding-x(1.5rem)
  height 3.2rem
  font-size 1.2rem
  border none
  border-radius 5px

.field__input_button
  font-weight 400
  background rgb(255, 166, 69)
  text-transform uppercase
  transition color .3s linear
  &:hover
    color rgb(255, 255, 255)

.field__label
  position absolute
  left 1.5rem
  top 1rem
  font-size 1.2rem
  pointer-events: none;
  opacity 1
  transition: opacity .05s ease-out 0s;

.field__input.not-empty + .field__label
  opacity: 0


.service-title
  margin-y(2rem)
  font-size 1.5rem
  font-weight 500
  line-height 1.3
  text-align center

.service-list
  margin-y(2rem)
  padding-x(1rem)
  display flex
  flex-wrap wrap
  justify-content space-between
  list-style none
  +between($phone, $tablet-portrait)
    justify-content center
  +below($phone)
    justify-content center

.service-list__item
  position relative
  height 230px
  flex-basis 270px
  margin-bottom 30px
  padding 20px 35px 0
  border-radius 10px
  box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
  text-align center
  cursor pointer
  transition all .3s ease-out
  &:hover
    box-shadow 0 14px 28px rgba(22, 141, 226,0.25), 0 10px 10px rgba(22, 141, 226,0.22)


.service-list__link
  display block
  text-decoration none
  &:hover
    text-decoration underline


.service-list__name
  margin-top 10px
  margin-bottom 35px
  padding-bottom 20px
  display block
  color rgb(22, 141, 226)
  text-decoration none

.service-list__text
  margin-top 10px
  margin-bottom 35px
  padding-bottom 20px

.service-price
  position absolute
  height 40px
  width 100%
  bottom 0
  left 0
  right 0
  background-color rgb(255, 166, 69)
  border-radius 0 0 10px 10px
  color rgb(1,1,1)
  text-align center
  font-size 20px
  line-height 40px

.service-text
  margin-y(2.5rem)
  padding-x(1.5rem)
  padding-y(1.5rem)
  font-size 1.2rem
  font-size 300

.reviews
  overflow hidden
  margin-y(2.5rem)
  padding-x(1.5rem)

.reviews__title
  float left
  margin 0
  font-size 2rem
  font-weight 500
  line-height 3.2rem

.reviews__button
  height 3.2rem
  width 15.33rem
  padding-x(1.5rem)
  float right
  border-radius 5px
  font-size 1.2rem
  line-height 3.2rem
  font-weight 400
  text-align center
  text-transform uppercase
  text-decoration none
  background-color rgb(255, 166, 69)
  cursor pointer
  color rgb(1, 1, 1)
  transition color .3s linear
  &:hover
    color rgb(255, 255, 255)

.reviews-slider
  width 100%

.reviews-list
  list-style none
  padding-left 0

.reviews-list__image
  width 10.625rem
  height 10.625rem
  border-radius 50%

.control__prev,
.control__next
  +below($tablet-landspace)
    display none
