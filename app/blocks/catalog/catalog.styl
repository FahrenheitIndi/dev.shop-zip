.catalog__title
  position relative
  font-size 2.25rem
  font-weight 500
  text-align left
  color rgb(34, 34, 34)
  &:after
    position absolute
    top 50%
    right 0
    width 40rem
    height 0.1875rem
    content ''
    background-color  rgb(153, 153, 153)
  +between($tablet-portrait, $tablet-landspace)
    font-size 1.8rem
  +between($phone, $tablet-portrait)
    font-size 1.5rem
  +below($phone)
    font-size 1.2rem
  +below($desktop)
    text-align center
    &:after
      display none

.products
  padding-y(2rem)
  display flex
  flex-wrap wrap
  justify-content space-between
  +below($phone)
    justify-content center

.product-item
  position relative
  min-height 24rem
  margin-bottom 2rem
  padding-x(0.875rem)
  flex-basis 12.875rem
  border solid 1px #cccccc

.product-item__link
  height 9.125rem
  display block

.product-item__image
  max-width 100%
  display block
  border-bottom solid 1px #cccccc

.product-item__name
  width 11.25rem
  padding-y(0.625rem)
  font-size 0.875rem
  font-weight 500
  line-height 1.3
  display block
  text-align left
  hyphens auto
  color rgb(34, 34, 34)
  cursor pointer
  overflow hidden
  text-overflow ellipsis
  text-decoration none
  &:hover
    text-decoration underline


.product-item__prices
  position absolute
  width 90%
  left 0
  right 0
  bottom 6.875rem
  margin 1.625rem auto 0.75rem
  padding-bottom 0.2rem
  border-bottom solid 1px #cccccc
  text-align right

.product-item__price
  font-size 1.5rem
  font-weight 500

.product-item__price_blue
    color rgb(35, 143, 223)

.price
  font-size 1.125rem
  font-weight 500

.product-item__buy
  position absolute
  margin-x(auto)
  margin-bottom 1rem
  padding-top 0.75rem
  left 0
  right 0
  bottom 0
  text-align: center;

.control
  text-align center

.control__button,
.control__coount
  display inline-block
  vertical-align middle

.control__button
  position relative
  width 1.5rem
  height 1.5rem
  line-height 1.5rem
  background-color rgb(255, 166, 77)
  cursor pointer

.control__coount
  width 3rem
  height 2rem
  text-align center

.product-item__button
  width 80%
  height 2rem
  margin 1rem auto 0
  font-size 0.875rem
  line-height 2rem
  font-weight 500
  display block
  background-color rgb(255, 166, 77)
  text-decoration none
  color rgb(34, 34, 34)