.banner
  position relative
  z-index 1

.banner__item
  position relative

.banner__image
  width 100%

.banner__button
  position absolute
  left 5.625rem
  bottom 3.125rem
  width 15rem
  height 3.125rem
  line-height 3.125rem
  font-size 1.1rem
  display block
  background rgb(50,54,57)
  text-align center
  text-decoration none
  text-transform uppercase
  color rgb(255, 255, 255)
  transition all .4s ease-out
  &:hover
    background rgb(166,40,62)
    color rgb(255,255,255)
    text-decoration none
  +below($tablet-landspace)
    display none
