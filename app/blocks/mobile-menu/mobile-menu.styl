.mobile-menu
  position fixed
  z-index 1001
  top 0
  left -85%
  height 100%
  width 85%
  overflow hidden
  background rgb(255,255,255)
  transition left 0.3s ease-in-out
  +above($phone)
    left -320px
    width 320px

.mobile-menu.mobile-menu_open
  left 0
  overflow-y auto
  box-shadow 0 0 32px rgba(0,0,0,0.5)

.mobile-menu__header,
.mobile-menu-info
  padding-y(1rem)
  padding-x(1.375rem)
  overflow hidden
  background-color rgb(239,239,239)

.mobile-menu__header .mobile-menu__link:first-child
  text-decoration underline
.mobile-menu__header .mobile-menu__link:last-child
  float right

.mobile-menu__link
  font-size 1.1rem

.group-list
  padding-y(1rem)
  list-style none

.group-list__item,
.sub-group-list__item
  position relative

.group-list__link,
.sub-group-list__link,
.group-list__toggle
  padding-y(0.875rem)
  padding-x(1.375rem)
  display block

.group-list__toggle
  position absolute
  top 0
  right 0
  display block
  color rgb(1,1,1)
  text-decoration none

.group-list__toggle:before
  content: "\E5CF";
  font-family 'Material Icons'
  font-size: 20px;

.group-list__toggle:hover,.group-list__toggle:focus
  text-decoration none

.group-list__toggle_open:before
  content "\E5CE";

.sub-group-list
  margin-left 10px
  display none

.sub-group-list_open
  display block

.mobile-menu-info
  font-size 14px

.mobile-menu-info__item
  margin 4px 0
  white-space nowrap

.mobile-menu-info__link
  position relative
  margin-left 24px

.mobile-menu-info__link:before
  position absolute
  left -24px
  font-size 18px
  font-family 'Material Icons'
  line-height 1.2
  content ''

.mobile-menu-info__link_phone:before
  content '\e0cd'

.mobile-menu-info__link_email:before
  content '\e0be'

.mobile-menu-info__link_address:before
  content '\e192'