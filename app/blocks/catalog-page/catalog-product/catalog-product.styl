.breadcrumbs
  padding 0 5px
  margin 15px 0
  font-size 14px

.breadcrumbs__item
  display inline-block
  vertical-align bottom
  color #ccc
  &:before
    padding 0 5px
    content "/\00a0"

.breadcrumbs__item_home
  color inherit
  &:before
    display none

.breadcrumbs__link
  cursor pointer
  transition color .2s
  &:hover
    text-decoration none
    color #ff6d4b

.breadcrumbs__link i
  font-size inherit
  vertical-align middle

.catalog-product__model
  min-height 20px
  margin-bottom 20px
  padding 9px
  border: 1px solid #e3e3e3
  border-radius 3px
  background #f5f5f5
  box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);

.catalog-product__model span
  padding-left 5px
  color #ff6d4b

.catalog-product__wrap
  display flex
  width 100%

.catalog-product__image
  width 70%

.catalog-product__pay
  width 30%
  padding-x(20px)

.pay-block
  width 100%
  padding-x(20px)
  border 1px solid #e4e4e4
  background $white

.pay-block__price
  padding-y(10px)
  font-size 30px
  font-weight 700
  color $red

