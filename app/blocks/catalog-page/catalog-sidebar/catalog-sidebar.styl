.catalog-sidebar
  width 315px
  margin-right 0.5rem


.sidebar-nav
  padding-bottom 10px
  /*padding-left 1.8rem
  padding-right 1rem*/
  box-shadow 0 1px 3px 0px rgba(0, 0, 0, 0.1)
  background $white

.sidebar-nav__title
  margin 0
  padding-x(1.375rem)
  padding-y(0.875rem)
  font-size 1.3rem
  font-weight 500
  text-align center
  background-color #f7f7f7

.catalog-menu
  font-size 1rem

.catalog-menu__item
  position relative

.catalog-menu__link
  width 90%
  padding-y(0.875rem)
  padding-x(1.375rem)
  display block
  &:hover
    text-decoration none

.catalog-menu__toggle
  position absolute
  top 0
  right 0
  padding-y(0.875rem)
  padding-x(1.375rem)
  display block
  color #010101
  text-decoration none
  cursor pointer
  &:hover
    text-decoration none

.catalog-menu__toggle:before
  content "\E5CF"
  font-family 'Material Icons'
  font-size 20px
  &:hover
    text-decoration none

.catalog-menu__toggle_open:before
  content "\E5CE"

.sub-catalog-menu
  display none

.sub-catalog-menu_open
  display block

.sub-catalog-menu__link
  padding-y(0.875rem)
  padding-left 1.8rem
  padding-right 1.375rem
  display block
  &:hover
    text-decoration none

.sidebar-filter
  padding-y(1.8rem)
  padding-x(15px)
  box-shadow 0 1px 3px 0px rgba(0, 0, 0, 0.1)
  background rgb(237,246,252)
  overflow hidden

.sidebar-filter__title
  font-size 1.1rem
  font-weight 500

.form-filter
  margin-x(-15px)
  padding-top 25px

.form-filter__group
  overflow hidden

.form-filter__field
  position relative
  padding-x(15px)
  width 50%
  float left

.form-filter__label
  padding-bottom 5px
  display block

.form-filter__input
  width 100%
  height 38px
  padding-x(4px)
  font-size 18px
  border 1px solid #ccd5db
  border-radius 2px
  outline none

.form-filter__control
  padding-top 2rem
  padding-bottom 1rem
  text-align center


.form-filter__show,
.form-filter__clear
  width 100%
  padding-y(0.6rem)
  border none
  background none

.form-filter__show
  background rgb(255,166,69)
  color $black
  border-radius 2px
  transition all 0.2s
  &:hover
    background rgba(255, 166, 69, 0.9)

.form-filter__clear
  color #238FDF
