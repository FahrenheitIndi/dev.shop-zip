.service-order
  position relative
  z-index 2
  margin 1.5rem 0
  padding-x(6.5rem)
  padding-y(4rem)
  background-image radial-gradient(circle at 69% 63%, #6cc0ec, #6eb3e7)
  text-align left

.border
  position absolute
  z-index 3
  top 1rem
  right 1rem
  bottom 1rem
  left 1rem
  border 2px dashed rgb(255, 255, 255)

.service-order__text
  position relative
  z-index 4
  font-size 1.4rem
  font-weight 300
  text-transform uppercase
  color rgb(54, 57, 60)

.service-form
  position relative
  z-index 4
  width 100%
  margin-top 1.5rem

.field-group
  text-align center
  overflow hidden

.field-group__input,
.field-group__button
  width calc(100%/3 - 4rem)
  height 3.2rem

.field-group__input
  padding-x(1.5rem)
  border none

.field-group__input_name
  float left

.field-group__input_phone
  color rgb(54, 57, 60)

.field-group__input_button
  float right
  font-weight 400
  background rgb(254, 192, 6)
  text-transform uppercase

.service-title
  margin-y(2rem)
  font-size 1.5rem
  font-weight 600
  line-height 1.3
  text-align center

.service-list
  padding-x(1rem)
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items stretch

.service-list__item
  position relative
  width 270px
  margin-bottom 30px
  padding 20px 35px 0
  border-radius 10px
  box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
  flex-basis 270px
  text-align center
  cursor pointer
  transition all .3s ease-out
  &:hover
    box-shadow 0 14px 28px rgba(22, 141, 226,0.25), 0 10px 10px rgba(22, 141, 226,0.22)


.service-list__link
  display block

.service-list__name
  margin-top 10px
  margin-bottom 35px
  padding-bottom 20px
  display block
  color rgb(22, 141, 226)

.service-price
  position absolute
  height 40px
  width 100%
  bottom 0
  left 0
  right 0
  background-color rgb(254,192,6)
  border-radius 0 0 10px 10px
  color rgb(1,1,1)
  text-align center
  font-size 20px
  line-height 40px