.breadcrumbs
  display flex
  padding 0 5px
  margin 15px 0
  font-size 14px

.breadcrumbs__item
  color #ccc
  &:before
    padding 0 5px
    content "/\00a0"

.breadcrumbs__item_home
  color inherit
  &:before
    display none

.breadcrumbs__link
  cursor pointer
  transition color .2s
  &:hover
    text-decoration none
    color #ff6d4b

.breadcrumbs__link i
  display inline-block
  vertical-align middle
  font-size inherit

.catalog-product__model
  min-height 20px
  margin-bottom 20px
  padding 9px
  border 1px solid #e3e3e3
  border-radius 3px
  background #f5f5f5
  box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);

.catalog-product__model span
  padding-left 5px
  color #ff6d4b

.catalog-product__wrap
  display flex
  width 100%

.catalog-product__images
  width 45%

.catalog-product__image
  max-width 100%
  box-shadow 0 1px 3px 0px rgba(0,0,0,0.1)
  transition all .4s ease-in-out
  cursor pointer
  &:hover
    box-shadow 0 15px 10px -8px rgba(0,0,0,0.2), 0 1px 4px rgba(0,0,0,0.1)

.catalog-product__thumb
  max-width 100%

.thumb-images
  width 100%
  margin-top 20px
  display flex
  justify-content space-between
  align-items

.thumb-images__item
  margin-x(10px)
  flex-basis 25%
  background $white
  box-shadow 0 1px 3px 0px rgba(0,0,0,0.1)
  transition all .4s ease-in-out
  cursor pointer
  &:hover
    box-shadow 0 15px 10px -8px rgba(0,0,0,0.2), 0 1px 4px rgba(0,0,0,0.1)


.thumb-images__item img
  width 100%
  text-align center

.catalog-product__desc
  width 30%
  padding-x(10px)

.catalog-product__title
  padding-bottom 10px
  font-weight 700

.catalog-product__pay
  width 25%
  padding-x(20px)
  border-radius 3px

.pay-block
  width 100%
  padding-x(20px)
  padding-y(20px)
  border 1px solid #e4e4e4
  border-radius 3px
  background $white

.pay-block__price
  padding-top 10px
  padding-bottom 20px
  font-size 30px
  font-weight 700
  color $red

.pay-block__stock
  padding-y(10px)
  padding-x(10px)
  border-radius 3px
  background-color #dff0d8
  color #3c763d

.pay-block__stock_red
  background $red
  color: $white
  opacity 0.8

.amount
  padding-y(20px)
  text-align center

.amount__minus,
.amount__quantity,
.amount__plus,
.amount__measure
  height 22px
  line-height 22px
  font-size 1.1rem
  font-weight 700
  display inline-block
  vertical-align middle

.amount__minus,
.amount__plus
  min-width 22px
  border-radius 2px
  background-color #f2f2f2
  text-align center
  cursor pointer
  transition background-color .3s linear
  &:hover
    text-decoration none
    background-color #d3d3d3

.amount__plus
  margin-right 5px

.amount__minus_disabled
  opacity .6
  cursor default
  &:hover
    background-color #f2f2f2

.amount__quantity
  max-width 50px
  border 1px solid transparent
  border-radius 3px
  text-align center
  &:focus
    border 1px solid $red

.amount__measure
  color #a5a5a5

.pay-block__button
  margin-top 1rem
  margin-bottom 0.5rem
  padding-y(12px)
  padding-x(36px)
  display block
  border-radius 3px
  font-weight 700
  background $red
  color $white
  letter-spacing 0
  text-align center
  text-transform uppercase
  cursor pointer
  will-change box-shadow, transform
  transition box-shadow 0.2s cubic-bezier(0.4, 0, 1, 1), background-color 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  &:hover
    box-shadow 0 15px 10px -8px rgba(0, 0, 0, 0.2), 0 1px 4px rgba(0, 0, 0, 0.1)
    outline none
    text-decoration none

.product-tab
  margin-top 50px
  width 100%
  background $white

.product-tab li
  display inline-block

.product-tab__item
  position relative
  min-width 50px
  padding-x(15px)
  padding-y(10px)
  font-size 0.8rem
  font-weight 600
  display block
  text-transform uppercase
  white-space nowrap
  cursor pointer
  &:hover
    text-decoration underline
    &:after
      height 3px
  &:after
    content ""
    height 0
    position absolute
    left 0
    right 0
    bottom 0
    background #1485ce
    transition all 250ms ease


.product-tab__item_active
  &:after
    height 3px

.tab-content
  padding-x(15px)
  padding-y(15px)
  background $white